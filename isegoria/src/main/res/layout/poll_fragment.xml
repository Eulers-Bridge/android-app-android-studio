<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingBottom="16dp">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/poll_vote_creator_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/poll_vote_question_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/poll_vote_creator_image_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lorem ipsum question here?" />

        <TextView
            android:id="@+id/poll_vote_creator_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/poll_vote_creator_image_view"
            app:layout_constraintTop_toBottomOf="@id/poll_vote_question_text_view"
            tools:text="Jane Doe" />

        <ImageView
            android:id="@+id/poll_vote_answers_count_image_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:src="@drawable/votecount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/poll_vote_answers_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/poll_vote_answers_count_image_view"
            android:layout_toStartOf="@+id/poll_vote_answers_count_image_view"
            android:maxLines="1"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/poll_vote_answers_count_image_view"
            app:layout_constraintEnd_toStartOf="@+id/poll_vote_answers_count_image_view"
            app:layout_constraintTop_toTopOf="@+id/poll_vote_answers_count_image_view"
            tools:ignore="HardcodedText"
            tools:text="1" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/poll_fragment_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poll_vote_creator_name_text_view"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layoutAnimation="@anim/layout_animation_fade_in"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
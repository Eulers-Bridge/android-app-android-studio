<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical|center_horizontal"
	        android:orientation="vertical"
            android:weightSum="1">
	
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.76"
            android:src="@drawable/isegoria" />
	        
	            <TextView
	                android:id="@+id/isegoriaLabel"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:ems="10"
                    android:gravity="center"
	                android:text="Isegoria"
	                android:textColor="@color/white"
	                android:textSize="33dp"
                    >
	
	    	</TextView>

	            <EditText
	                android:id="@+id/username"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
	                android:background="@color/white"
	                android:ems="10"
	                android:minHeight="40dp"
	                android:paddingLeft="5dp"
	                android:singleLine="true"
	                android:text="greg.newitt@unimelb.edu.au"
	                android:textColor="@color/grey" >
	            </EditText>
	            
	            <View
	            	android:layout_width="fill_parent"
	                android:layout_height="1dip"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:background="#676475" />

	            <EditText
	                android:id="@+id/password"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:background="@color/white"
	                android:ems="10"
	                android:inputType="textWebPassword"
	                android:minHeight="40dp"
	                android:paddingLeft="5dp"
	                android:singleLine="true"
	                android:text="test123"
	                android:textColor="@color/grey" >
	            </EditText>

	            <Button
	                android:id="@+id/addToCalendar"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
	                android:background="#52BB42"
	                android:minHeight="40dip"
	                android:onClick="login"
	                android:text="Login"
	                android:textColor="@color/white"
	                android:textStyle="bold" />

	            <Button
	                android:id="@+id/Button01"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginTop="10dp"
	                android:background="#4E8DDC"
	                android:minHeight="40dip"
	                android:onClick="signupClicked"
	                android:text="Sign Up"
	                android:textColor="@color/white"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/newsArticleTitle"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:layout_marginLeft="15dp"
	                android:layout_marginRight="15dp"
	                android:layout_marginTop="15dp"
	                android:gravity="center"
	                android:text="By continuing, you agree to our Terms and Privacy Policy"
	                android:textColor="@color/white" />
	
	    </LinearLayout>
	</LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <ImageView
        android:id="@+id/event_list_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_rect_placeholder"
        tools:background="@tools:sample/backgrounds/scenic"/>

    <TextView
        android:id="@+id/event_list_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/museo_sans_rounded_300"
        app:layout_constraintBottom_toBottomOf="@+id/event_list_image_view"
        app:layout_constraintEnd_toEndOf="@+id/event_list_image_view"
        app:layout_constraintStart_toStartOf="@+id/event_list_image_view"
        app:layout_constraintTop_toTopOf="@+id/event_list_image_view"
        tools:text="Title" />

    <TextView
        android:id="@+id/event_list_details_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/event_list_image_view"
        app:layout_constraintStart_toStartOf="@+id/event_list_image_view"
        app:layout_constraintTop_toBottomOf="@+id/event_list_title_text_view"
        tools:text="@tools:sample/lorem/random"/>

</android.support.constraint.ConstraintLayout>
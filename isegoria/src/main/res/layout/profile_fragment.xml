<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/topBackgroundNews"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp" >

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#838a8a8a" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University of Melbourne"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:paddingBottom="3dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal"
        >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#838a8a8a" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#838a8a8a" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical" >

        <TextView
            android:id="@+id/photoTitle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="100"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="@dimen/profileTextSize"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/friendsTitle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ems="7"
            android:text="FRIENDS"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey"
            android:textSize="12dp"
            android:paddingBottom="2dp" />

         </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#838a8a8a"
            android:orientation="vertical" >

           </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/editText122"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="100"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="@dimen/profileTextSize"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/editText133"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="GROUPS"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey"
                android:textSize="12dp"
                android:paddingBottom="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#838a8a8a"
            android:orientation="vertical" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/editText122"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="100"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="@dimen/profileTextSize"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/editText1333"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="REWARDS"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey"
                android:textSize="12dp"
                android:paddingBottom="2dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#838a8a8a" />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res/com.eulersbridge.isegoria.CircularSeekBar"
            android:paddingLeft="6dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.eulersbridge.isegoria.CircularSeekBar
                android:id="@+id/circularSeekBar1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                circle_color="#64d3d3d3"
                circle_progress_color="#00FF00"
            />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXP Level"
                android:textSize="14dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.eulersbridge.isegoria.CircularSeekBar
                android:id="@+id/circularSeekBar2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                circle_color="#64d3d3d3"
                circle_progress_color="#00FF00"
                />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badges"
                android:textSize="14dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.eulersbridge.isegoria.CircularSeekBar
                android:id="@+id/circularSeekBar3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                circle_color="#64d3d3d3"
                circle_progress_color="#00FF00"
                />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasks"
                android:textSize="14dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.eulersbridge.isegoria.CircularSeekBar
                android:id="@+id/circularSeekBar4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                circle_color="#64d3d3d3"
                circle_progress_color="#00FF00"
                />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textSize="14dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey" />
        </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#838a8a8a" />
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#64d3d3d3" >

            <TextView
                android:id="@+id/mytextview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Tasks"
                android:textColor="#ff575757"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/showProgressButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Show Progress"
                android:textColor="#ff0781ff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />


        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/tasksLayout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_image_background"
                android:background="@color/profileImageBackground"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/profile_image_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:maxWidth="100dp" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/profile_image_small"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_institution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/profile_name"
                android:layout_marginTop="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_personality_test_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/profile_institution"
                android:text="@string/user_profile_personality_test_button"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff059aff"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/friendsNum"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profileTextSize" />

                <TextView
                    android:id="@+id/friendsTitle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_friends"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />
            </LinearLayout>

            <include layout="@layout/divider_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/groupNum"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profileTextSize" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_groups"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />
            </LinearLayout>

            <include layout="@layout/divider_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/rewardsNum"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profileTextSize" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_rewards"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/divider_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.eulersbridge.isegoria.views.CircularSeekBar
                    android:id="@+id/circularSeekBar1"
                    android:layout_width="@dimen/profile_circle_size"
                    android:layout_height="@dimen/profile_circle_size"
                    circle_color="@color/profile_circle_ring_base"
                    circle_progress_color="#00FF00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_experience_level"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.eulersbridge.isegoria.views.CircularSeekBar
                    android:id="@+id/circularSeekBar2"
                    android:layout_width="@dimen/profile_circle_size"
                    android:layout_height="@dimen/profile_circle_size"
                    circle_color="@color/profile_circle_ring_base"
                    circle_progress_color="#00FF00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_badges"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.eulersbridge.isegoria.views.CircularSeekBar
                    android:id="@+id/circularSeekBar3"
                    android:layout_width="@dimen/profile_circle_size"
                    android:layout_height="@dimen/profile_circle_size"
                    circle_color="@color/profile_circle_ring_base"
                    circle_progress_color="#00FF00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_tasks"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.eulersbridge.isegoria.views.CircularSeekBar
                    android:id="@+id/circularSeekBar4"
                    android:layout_width="@dimen/profile_circle_size"
                    android:layout_height="@dimen/profile_circle_size"
                    circle_color="@color/profile_circle_ring_base"
                    circle_progress_color="#00FF00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_events"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/divider_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/taskLevelField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/profile_section_tasks"
                android:textColor="#575757"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_show_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/profile_show_progress"
                android:textColor="#0781ff"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_tasks_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp" />
    </LinearLayout>
</ScrollView>
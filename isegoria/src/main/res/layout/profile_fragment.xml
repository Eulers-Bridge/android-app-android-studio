<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/topBackgroundNews"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/profileImageBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="14dp" >

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:maxWidth="100dp" />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#838a8a8a" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University of Melbourne"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:paddingBottom="3dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#838a8a8a" />
            </LinearLayout>

            <TextView
                android:id="@+id/personalityTestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_profile_personality_test_button"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff059aff"
                android:paddingBottom="3dp"
                android:textSize="16sp"
                android:paddingTop="3dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#838a8a8a" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:orientation="vertical" >

            <TextView
                android:id="@+id/friendsNum"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="0"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textSize="@dimen/profileTextSize"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/friendsTitle"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:ems="7"
                android:text="@string/profile_section_friends"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:paddingBottom="2dp" />

             </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#838a8a8a"
                android:orientation="vertical" >

               </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/groupNum"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="0"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profileTextSize"
                    android:paddingTop="2dp" />

                <TextView
                    android:id="@+id/editText133"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="@string/profile_section_groups"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:paddingBottom="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#838a8a8a"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/rewardsNum"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="0"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profileTextSize"
                    android:paddingTop="2dp" />

                <TextView
                    android:id="@+id/editText1333"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="@string/profile_section_rewards"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:paddingBottom="2dp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#838a8a8a" />

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.eulersbridge.isegoria.CircularSeekBar
                    android:id="@+id/circularSeekBar1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    circle_color="#64d3d3d3"
                    circle_progress_color="#00FF00"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_experience_level"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.eulersbridge.isegoria.CircularSeekBar
                    android:id="@+id/circularSeekBar2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    circle_color="#64d3d3d3"
                    circle_progress_color="#00FF00"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_badges"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.eulersbridge.isegoria.CircularSeekBar
                    android:id="@+id/circularSeekBar3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    circle_color="#64d3d3d3"
                    circle_progress_color="#00FF00"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_tasks"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.eulersbridge.isegoria.CircularSeekBar
                    android:id="@+id/circularSeekBar4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    circle_color="#64d3d3d3"
                    circle_progress_color="#00FF00"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_section_events"
                    android:textSize="14sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/grey" />
            </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#838a8a8a" />
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#64d3d3d3" >

                <TextView
                    android:id="@+id/taskLevelField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/profile_section_tasks"
                    android:textColor="#ff575757"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/showProgressButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/profile_show_progress"
                    android:textColor="#ff0781ff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/tasksLayout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </LinearLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/photo_detail_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/photo_detail_details_container"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_gravity="bottom"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingVertical="@dimen/activity_vertical_margin"
        android:background="@color/photo_details_background">

        <TextView
            android:id="@+id/photo_detail_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/photo_detail_date_text_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textSize="16sp" />

        <TextView
            android:id="@id/photo_detail_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <TextView
            android:id="@+id/photo_detail_likes_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/photo_detail_star_image_view"
            android:layout_toStartOf="@+id/photo_detail_star_image_view"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="@dimen/newsPointsSize" />

        <ImageView
            android:contentDescription="@string/photo_detail_view_star"
            android:id="@id/photo_detail_star_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/photo_detail_flag_image_view"
            android:layout_toStartOf="@+id/photo_detail_flag_image_view"
            android:layout_centerVertical="true"
            android:src="@drawable/stardefault" />

        <ImageView
            android:contentDescription="@string/photo_detail_view_flag"
            android:id="@id/photo_detail_flag_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:src="@drawable/flagdefault" />
    </RelativeLayout>

</FrameLayout>
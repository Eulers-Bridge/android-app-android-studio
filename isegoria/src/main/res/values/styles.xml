<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>

        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/lightBlue</item>
        <item name="colorAccent">@color/lightBlue</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Style the tab bar (e.g. on Feed fragment), and give child tabs a text appearance -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/lightGreen</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AccentButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/lightBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Login / Sign Up -->
    <style name="LoginSignUpHeadingTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginHeadingTextAppearance" parent="LoginSignUpHeadingTextAppearance">
        <item name="android:textSize">33sp</item>
    </style>

    <style name="SignUpHeadingTextAppearance" parent="LoginSignUpHeadingTextAppearance">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="WhiteTextColouredButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginButton" parent="WhiteTextColouredButton">
        <item name="colorButtonNormal">@color/lightGreen</item>
    </style>

    <style name="SignUpButton" parent="WhiteTextColouredButton">
        <item name="colorButtonNormal">@color/lightBlue</item>
    </style>

    <style name="LoginSignUpSmallPrintText">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.7</item>
    </style>

    <!-- Self Efficacy Questions -->
    <style name="QuestionSubheadingTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>

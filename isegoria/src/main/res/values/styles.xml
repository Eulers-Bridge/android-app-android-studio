<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>

        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/lightBlue</item>
        <item name="colorAccent">@color/lightBlue</item>

        <item name="textColorError">@color/lightRed</item>
    </style>

    <style name="AuthTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/black</item>
        <!-- Translucent status, overridden in v21 -->
    </style>

    <style name="PersonalityQuestionsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="DetailTheme" parent="AppTheme">
        <!-- Translucent status, overridden in v21 -->
    </style>

    <style name="PhotoDetailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AboutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/about_background</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Style the tab bar (e.g. on Feed fragment), and give child tabs a text appearance -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/museo_sans_rounded_500</item>
    </style>

    <style name="GreenButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/lightGreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/museo_sans_rounded_500</item>
    </style>

    <style name="BlueButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/lightBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/museo_sans_rounded_500</item>
    </style>

    <style name="PinkButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/museo_sans_rounded_500</item>
    </style>

    <!-- Login / Sign Up -->
    <style name="LoginSignUpTheme" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="LoginSignUpHeadingTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/museo_sans_rounded_500</item>
    </style>

    <style name="LoginHeadingTextAppearance" parent="LoginSignUpHeadingTextAppearance">
        <item name="android:textSize">33sp</item>
    </style>

    <style name="SignUpHeadingTextAppearance" parent="LoginSignUpHeadingTextAppearance">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="LoginSignUpSmallPrintText">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="ToolbarTitleAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/museo_sans_rounded_500</item>
    </style>

    <!-- Self Efficacy Questions -->
    <style name="QuestionSubheadingTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Image Picker -->
    <style name="ImagePickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryDark">@color/darkBlue</item>
    </style>

</resources>
